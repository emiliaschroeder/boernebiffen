---
import Heading from "./Heading.astro";
---

<header class="w-full bg-background-primary px-4 py-6 md:px-8 md:py-8">
  <div class="grid grid-cols-6 md:grid-cols-12 items-center gap-3">
    <!-- Logo -->
    <div class="col-span-3 md:col-span-2 flex items-center">
      <a href="/" class="block">
        <img
          src="/img/logo_lilac.svg"
          alt="Børnebiffen logo"
          class="w-28 md:w-50"
        />
      </a>
    </div>

    <!-- Mine favoritter (kun desktop) -->
    <div class="hidden md:flex md:col-span-9 justify-end">
      <button
        class="flex items-center gap-2 bg-background-plum-200 px-6 py-2 rounded-full shadow-md hover:scale-[1.02] transition"
      >
        <span class="text-text-primary"
          ><Heading style="h5">Mine favoritter</Heading></span
        >
        <img src="/img/plum_blub_header.svg" alt="" class="w-9 h-9" />
      </button>
    </div>

    <!-- Søge-felt -->
    <div
      class="col-span-3 md:col-span-3 md:col-start-12 flex justify-end md:justify-start"
    >
      <label class="relative w-full max-w-[300px]">
        <input
          type="text"
          placeholder="Søg..."
          class="w-full px-6 py-2 pr-10 md:py-3 md:text-[27px] rounded-full shadow-md bg-background-blue text-button-primary placeholder:text-button-primary focus:outline-none border-none"
        />
        <img
          src="/img/search.svg"
          alt="Søge-ikon"
          class="w-7 h-7 md:w-9 h-9 absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none"
        />
      </label>
    </div>
  </div>
</header>
