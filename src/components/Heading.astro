---
// Astro.props: kun style
const { style = "h2", stylingclasses = "" } = Astro.props;

// style bestemmer både HTML-tag og Tailwind-classes
const sizeClasses = {
  h1: "text-[64px] md:text-[140px] tracking-wide font-display",
  h2: "text-[25px] md:text-[90px] tracking-wide font-display",
  h3: "text-[20px] md:text-[37px] font-display tracking-wide",
  h4: "text-[20px] md:text-[40px] font-sans",
  h5: "text-[18px] md:text-[27px] font-sans",
};

const Htmlheading = style; // HTML-tag følger style
---

<Htmlheading class:list={[sizeClasses[style], stylingclasses]}>
  <slot />
</Htmlheading>
