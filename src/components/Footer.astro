---
import Text from "./Text.astro";
---

<footer
  class="relative w-full bg-background-plum-500 text-white h-[450px] md:h-[500px]"
>
  <!-- Start på baggrunds-svg -->
  <img
    src="/img/blubs_footer.svg"
    alt="blubs samlet"
    class="absolute left-0 right-0 bottom-0 w-full md:w-2/3 object-cover pointer-events-none z-0"
  />
  <!-- Slut på baggrunds-svg -->

  <!-- Start på indhold i footer -->
  <div
    class="relative z-10 w-full h-full p-6 md:p-10 flex flex-col items-end md:justify-between"
  >
    <!-- Logo -->
    <div class="w-full flex items-end justify-end md:justify-end">
      <a href="/" class="block">
        <img
          src="/img/logo_white.svg"
          alt="Børnebiffen logo"
          class="w-36 md:w-70 pb-6"
        />
      </a>
    </div>

    <!-- Link-tekster -->
    <div
      class="mt-0 md:mt-0 w-full md:w-auto flex flex-col items-end space-y-2 md:space-y-1"
    >
      <Text style="linktext">OM BØRNEBIFFEN</Text>
      <Text style="linktext">TILGÆNGELIGHEDSERKLÆRING</Text>
      <Text style="linktext">COOKIES</Text>
      <Text style="linktext">PRIVATPOLITIK</Text>
      <Text style="linktext">KONTAKT OS</Text>
    </div>
    <!-- Slut på indhold i footer -->
  </div>
</footer>
